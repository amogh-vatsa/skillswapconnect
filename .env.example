# TiDB Cloud Database Connection
# Format: mysql://username:password@host:port/database_name?ssl={"rejectUnauthorized":true}
# Example: mysql://user.cluster-id.tidbcloud.com:password@gateway01.region.prod.aws.tidbcloud.com:4000/skillswap?ssl={"rejectUnauthorized":true}
DATABASE_URL=mysql://your_username:your_password@your_host:4000/your_database?ssl={"rejectUnauthorized":true}

# Application Environment
NODE_ENV=production
PORT=3000

# Session Configuration (for express-session)
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Supabase Configuration
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Optional: Additional TiDB Cloud specific settings
# TIDB_HOST=gateway01.region.prod.aws.tidbcloud.com
# TIDB_PORT=4000
# TIDB_USERNAME=your_username
# TIDB_PASSWORD=your_password
# TIDB_DATABASE=skillswap

# Deployment Platform Specific (uncomment as needed)
# For Vercel deployment
# VERCEL_URL=your-app.vercel.app

# For Railway deployment
# RAILWAY_STATIC_URL=your-app.railway.app

# For Render deployment
# RENDER_EXTERNAL_URL=https://your-app.render.com
